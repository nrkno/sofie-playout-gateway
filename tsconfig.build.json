{
	"extends": "@sofie-automation/code-standard-preset/ts/tsconfig.bin",
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules/**", "src/**/*spec.ts", "src/**/__tests__/*", "src/**/__mocks__/*"],
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"*": ["./node_modules/*"],
			"tv-automation-playout-gateway": ["./src/index.ts"]
		},
		"types": ["node"],
		// TSR throws some typings issues
		"skipLibCheck": true
	}
}
